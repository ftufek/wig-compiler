          ------||| Retry	|sym_type: variable	|type: html
          ------||| Seed	|sym_type: session	|type: void
          ------||| holder	|sym_type: variable	|type: string
          ------||| nextRandom	|sym_type: function	|type: int
          ------||| plays	|sym_type: variable	|type: int
          ------||| record	|sym_type: variable	|type: int
          ------||| seed	|sym_type: variable	|type: int
          ------||| --------------
    exit plug List[plays = plays, holder = holder, record = record];
  }
