service {
          ------||| Symbol table: 
          ------||| ByeBye	|sym_type: variable	|type: html
          ------||| Chat	|sym_type: session	|type: void
          ------||| Logon	|sym_type: variable	|type: html
          ------||| Update	|sym_type: variable	|type: html
          ------||| msg0	|sym_type: variable	|type: string
          ------||| msg1	|sym_type: variable	|type: string
          ------||| msg2	|sym_type: variable	|type: string
          ------||| msg3	|sym_type: variable	|type: string
          ------||| msg4	|sym_type: variable	|type: string
          ------||| msg5	|sym_type: variable	|type: string
          ------||| --------------
  const html Logon = 
 ---- Symbols inside the HTML
          ------||| Symbol table: 
          ------||| --------------
<html> <body>
    <h1>Welcome to The Chat Room</h1>
    Please enter your on-line name:
    <input name="name" size=25 type="text">
  </body> </html>;
  const html Update = 
 ---- Symbols inside the HTML
          ------||| Symbol table: 
          ------||| --------------
<html> <body>
    <h1>The Chat Room Service</h1>
    <hr>
    <b>Messages so far:</b>
    <p>
    <[msg0]><p><[msg1]><p><[msg2]><p><[msg3]><p><[msg4]><p><[msg5]><p>
    <hr>
    <b>Your new message:</b>
    <p>
    <input name="msg" size=40 type="text">
    <p>
    <hr>
    <p>
    <input name="quit" type="radio" value="yes"> Quit now
  </body> </html>;
  const html ByeBye = 
 ---- Symbols inside the HTML
          ------||| Symbol table: 
          ------||| --------------
<html> <body>
    <h1>Thanks for using The Chat Room</h1>
    You made <[conns]> connections
    and wrote <[msgs]> messages.
  </body> </html>;
  string msg0;
  string msg1;
  string msg2;
  string msg3;
  string msg4;
  string msg5;
  session Chat () { 
          ------||| Symbol table: 
          ------||| connections	|sym_type: variable	|type: int
          ------||| msg	|sym_type: variable	|type: string
          ------||| name	|sym_type: variable	|type: string
          ------||| quit	|sym_type: variable	|type: string
          ------||| written	|sym_type: variable	|type: int
          ------||| --------------
          ------||| ByeBye	|sym_type: variable	|type: html
          ------||| Chat	|sym_type: session	|type: void
          ------||| Logon	|sym_type: variable	|type: html
          ------||| Update	|sym_type: variable	|type: html
          ------||| msg0	|sym_type: variable	|type: string
          ------||| msg1	|sym_type: variable	|type: string
          ------||| msg2	|sym_type: variable	|type: string
          ------||| msg3	|sym_type: variable	|type: string
          ------||| msg4	|sym_type: variable	|type: string
          ------||| msg5	|sym_type: variable	|type: string
          ------||| --------------
    string name;
    string msg;
    string quit;
    int connections;
    int written;
    connections = 0;
    written = 0;
    quit = "no";
    show Logon receive [name = name];
    while (quit != "yes") { 
        show plug Update[msg0 = msg0, msg1 = msg1, msg2 = msg2, msg3 = msg3, msg4 = msg4, msg5 = msg5] receive [msg = msg, quit = quit];
        connections = connections + 1;
        if (msg != "") { 
          written = written + 1;
          msg0 = msg1;
          msg1 = msg2;
          msg2 = msg3;
          msg3 = msg4;
          msg4 = msg5;
          msg5 = name + "> " + msg;
        }
      }

    exit plug ByeBye[conns = connections, msgs = written];
  }
}
